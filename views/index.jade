                strong Site Admin:
                |  <span id='userInfoSiteAdmin'></span>
                br
                strong Created:
                |  <span id='userInfoCreated'></span>
                br
                strong Updated:
                |  <span id='userInfoUpdated'></span>
        // /USER INFO

        // USER LIST
        h2 Outcomes Catalogue
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Poll the World's Repositories
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email') 
                br
                button#btnAddUser Poll Now
        // /ADD USER

    // /WRAPPER